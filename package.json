{
  "name": "apollo-server-2-boilerplate",
  "version": "1.0.0",
  "description": "Apollo Server 2 Boilerplate",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "start": "npm run clean && npm run build:production && node dist/main.js",
    "dev": "npm run clean && npm run build && concurrently --kill-others \"webpack --watch --mode=development\" \"forever -w ./dist/main.js\"",
    "build": "webpack --mode development",
    "build:production": "webpack --mode production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "git-cz"
  },
  "keywords": [
    "apollo",
    "graphql",
    "boilerplate"
  ],
  "author": "TAnas0",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.1.0",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/prompt": "^7.2.1",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.5",
    "@types/graphql": "^14.5.0",
    "@types/node": "^10.17.60",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "commitizen": "^3.0.5",
    "concurrently": "4.0.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "3.1.0",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-webpack-plugin": "^4.2.0",
    "forever": "0.15.3",
    "graphql": "^14.7.0",
    "graphql-tag": "2.10.0",
    "prettier": "1.14.3",
    "standard": "12.0.1",
    "ts-loader": "^5.4.5",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-node-externals": "1.7.2"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/runtime": "7.1.5",
    "@graphql-modules/core": "0.2.17",
    "@prisma/client": "^5.19.1",
    "apollo-server": "2.1.0",
    "config": "^3.0.1",
    "js-yaml": "^3.12.0",
    "merge-graphql-schemas": "1.5.7",
    "prisma": "^5.19.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  }
}
